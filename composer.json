{
    "name": "utopia-php/servers",
    "description": "A base library for building Utopia style servers.",
    "type": "library",
    "keywords": ["php","framework", "upf", "utopia", "servers"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Team Appwrite",
            "email": "team@appwrite.io"
        }
    ],
    "autoload": {
        "psr-4": {"Utopia\\Servers\\": "src/Servers"}
    },
    "autoload-dev": {
        "psr-4": {"Tests\\E2E\\": "tests/Servers/Unit"}
    },
    "scripts":{
        "test": "phpunit",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "lint": "vendor/bin/pint --test"
    },
    "require": {
        "php": ">=8.0",
        "utopia-php/di": "dev-feat-framework-v2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.5",
        "laravel/pint": "^0.2.3",
        "phpstan/phpstan": "^1.8"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/utopia-php/di"
        }
    ]
}
